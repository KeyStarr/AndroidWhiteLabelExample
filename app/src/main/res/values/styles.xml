<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="WhiteToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_height">56dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textColor">#3a3a3a</item>
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="WhiteTabLayoutStyle" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="android:background">@android:color/white</item>
        <item name="tabTextAppearance">@style/WhiteTabLayoutTextAppearance</item>
        <item name="tabIndicatorColor">@color/active</item>
        <item name="tabRippleColor">@color/disabled</item>
    </style>

    <style name="WhiteTabLayoutTextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:colorPrimary">@color/text_dark</item>
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <style name="HintTextStyle" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textColor">@color/active</item>
    </style>

    <style name="InputErrorTextStyle" parent="TextAppearance.Design.Error">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textColor">@color/error</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="boxStrokeColor">@color/active</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="hintTextAppearance">@style/HintTextStyle</item>
        <item name="errorTextAppearance">@style/InputErrorTextStyle</item>
        <!-- Hint disabled color -->
        <item name="android:textColorHint">@color/text_grey</item>
    </style>

    <style name="TextInputEditTextStyle" parent="Medium.Primary.16">
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="android:indeterminate">true</item>
        <item name="android:progressTint">@color/active</item>
    </style>

    <style name="ProgressBarStyle.Small">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <style name="ProgressBarStyle.Normal">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="WhiteDialogStyle" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">@android:color/white</item>
        <item name="materialAlertDialogBodyTextStyle">@style/Medium.Primary.18</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AlertDialogTitle</item>
    </style>

    <style name="AlertDialogTitle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">21sp</item>
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="ErrorTextView" parent="@style/Medium.Primary.20">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ErrorTextView.WithPaddings">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#e6e6e7</item>
    </style>

    <style name="HorizontalDivider.Thick">
        <item name="android:layout_height">4dp</item>
    </style>

    <style name="HorizontalDivider.Thin">
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="DatePickerDialogStyle" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:colorPrimary">#fff</item>
        <item name="android:colorAccent">@color/active</item>
        <item name="colorControlActivated">@color/active</item>
        <item name="colorControlHighlight">@color/active</item>
        <item name="materialButtonStyle">@style/PickerButtonStyle</item>
        <item name="colorPrimaryDark">@color/active</item>
    </style>

    <style name="PickerButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/active</item>
    </style>
</resources>
