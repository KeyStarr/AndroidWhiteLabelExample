<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="WhiteToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_height">56dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textColor">#3a3a3a</item>
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/active</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="hintTextAppearance">@style/HintTextStyle</item>
        <item name="errorTextAppearance">@style/InputErrorTextStyle</item>
        <!-- Hint disabled color -->
        <item name="android:textColorHint">@color/text_grey</item>
    </style>

    <style name="HintTextStyle" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textColor">@color/active</item>
    </style>

    <style name="InputErrorTextStyle" parent="TextAppearance.Design.Error">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textColor">@color/error</item>
    </style>

    <style name="TextInputEditTextStyle" parent="Medium.Primary.16">
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="DatePickerDialogStyle" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:colorPrimary">#fff</item>
        <item name="android:colorAccent">@color/active</item>
        <item name="colorControlActivated">@color/active</item>
        <item name="colorControlHighlight">@color/active</item>
        <item name="materialButtonStyle">@style/PickerButtonStyle</item>
        <item name="colorPrimaryDark">@color/active</item>
    </style>

    <style name="PickerButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/active</item>
    </style>

    <style name="ColoredButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColorPrimaryInverse">#ffffff</item>
        <item name="android:textAppearance">@style/Bold.Secondary.14</item>
        <item name="android:layout_height">@dimen/default_button_height</item>
        <item name="android:backgroundTint">@color/colored_button_selector</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
